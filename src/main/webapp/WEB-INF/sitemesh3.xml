<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <mapping path="/*" decorator="/WEB-INF/decorator/standard.jsp"/>

    <mapping>
        <path>/user/new</path>
        <decorator>/WEB-INF/decorator/standard.jsp</decorator>
    </mapping>
    
    <mapping>
        <path>/user/settings*</path>
        <decorator>/WEB-INF/decorator/settings.jsp</decorator>
        <decorator>/WEB-INF/decorator/standard.jsp</decorator>
    </mapping>
    
    <mapping>
        <path>/question*</path>
        <decorator>/WEB-INF/decorator/teacher.jsp</decorator>
        <decorator>/WEB-INF/decorator/standard.jsp</decorator>
    </mapping>
    
    <mapping>
        <path>/teacher*</path>
        <decorator>/WEB-INF/decorator/teacher.jsp</decorator>
        <decorator>/WEB-INF/decorator/standard.jsp</decorator>
    </mapping>
    
    <mapping>
        <path>/admin*</path>
        <decorator>/WEB-INF/decorator/admin.jsp</decorator>
        <decorator>/WEB-INF/decorator/standard.jsp</decorator>
    </mapping>
    
    <mapping>
        <path>/user*</path>
        <decorator>/WEB-INF/decorator/teacher.jsp</decorator>
        <decorator>/WEB-INF/decorator/admin.jsp</decorator>
        <decorator>/WEB-INF/decorator/standard.jsp</decorator>
    </mapping>
        
</sitemesh>
